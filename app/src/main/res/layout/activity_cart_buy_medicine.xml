<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CartBuyMedicineActivity">
  <ListView
      android:id="@+id/listViewCBM"
      android:layout_width="339dp"
      android:layout_height="295dp"
      android:layout_margin="10dp"
      android:layout_marginStart="16dp"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.521"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.44">


  </ListView>

  <TextView
      android:id="@+id/textViewCBMTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-condensed"
      android:text="Health-Xpert"
      android:textColor="@color/design_default_color_on_primary"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.485"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.01" />

  <TextView
      android:id="@+id/textViewCBMPackageName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Medicine Cart Items"
      android:textColor="@color/yellow"
      android:textColorHighlight="#00962A"
      android:textColorLink="#00D47F"
      android:textSize="20sp"
      android:textStyle="normal|italic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.479"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewCBMTitle"
      app:layout_constraintVertical_bias="0.056" />

  <Button
      android:id="@+id/buttonCBMBack"
      android:layout_width="130dp"
      android:layout_height="56dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="209dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/btn_bg"
      android:backgroundTint="#8BC34A"
      android:text="Back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="104dp"
      android:text="Select Delivery Date"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/listViewCBM" />

  <Button
      android:id="@+id/buttonCBMDate"
      style="?android:spinnerStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="72dp"
      android:text="24/10/2021"
      android:textColor="@color/yellow"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/buttonCBMCheckout"
      android:layout_width="116dp"
      android:layout_height="62dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/btn_bg"
      android:backgroundTint="#8BC34A"
      android:text="CHECKOUT"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.881"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewCLtitle2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:text="Deliver Location:Solapur"
      android:textColor="@color/colorWhite"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/listViewCBM"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.476"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewCBMTotalPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="Total Cost:"
      android:textColor="@color/teal_200"
      android:textSize="34sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.468"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/listViewCBM" />

  </androidx.constraintlayout.widget.ConstraintLayout>
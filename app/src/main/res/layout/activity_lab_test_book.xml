<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LabTestBookActivity">


  <EditText
      android:id="@+id/editTextLTBPinccode"
      android:layout_width="266dp"
      android:layout_height="61dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@android:drawable/ic_menu_mylocation"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="Pin Code"
      android:inputType="textPersonName"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textColor="@color/black"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextLTBAddress" />

  <EditText
      android:id="@+id/editTextLTBContactNumber"
      android:layout_width="266dp"
      android:layout_height="61dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@android:drawable/stat_sys_phone_call"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="Contact Number"
      android:inputType="textPersonName"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textColor="@color/black"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextLTBPinccode" />

  <TextView
      android:id="@+id/textViewLTBTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-condensed"
      android:text="Health-Xpert"
      android:textColor="@color/material_dynamic_tertiary20"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.023" />

  <TextView
      android:id="@+id/textViewLTBPackageName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Please Fill All Details for Booking"
      android:textColor="@color/colorWhite"
      android:textColorHighlight="#00962A"
      android:textColorLink="#00D47F"
      android:textSize="24sp"
      android:textStyle="normal|italic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.458"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewLTBTitle"
      app:layout_constraintVertical_bias="0.051" />

  <EditText
      android:id="@+id/editTextLTBFullName"
      android:layout_width="266dp"
      android:layout_height="60dp"
      android:layout_marginTop="64dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@drawable/ic_baseline_person_24"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="Full Name"
      android:inputType="textPersonName"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textColor="@color/black"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewLTBPackageName" />

  <EditText
      android:id="@+id/editTextLTBAddress"
      android:layout_width="266dp"
      android:layout_height="60dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@drawable/ic_baseline_security_24"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="Address"
      android:inputType="textEmailAddress"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textColor="@color/black"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextLTBFullName" />

  <Button
      android:id="@+id/buttonLTBBook"
      android:layout_width="110dp"
      android:layout_height="55dp"
      android:layout_marginBottom="108dp"
      android:backgroundTint="#8BC34A"
      android:text="Book"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>